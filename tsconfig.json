{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react"
    },
    "include": ["src/**/*", "vite.config.ts", "library/**/*"],
    "filesGlob": ["**/*.ts", "**/*.tsx"],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "public",
        "scripts",
        "webpack.config.js",
        "jest.config.js",
        "tsconfig.json",
        "tsconfig.node.json",
        "tsconfig.prod.json",
        "tsconfig.prod.node.json",
        "tsconfig.prod.web.json",
        "tsconfig.web.json"
    ]
}
